<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <title>Join</title>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
    <script src="./js/main.js"></script>
    <link rel="stylesheet" href="/css/join.css">
</head>
<body>
    
<div class="container" id="container">
	<div class="form-container sign-up-container">
		<form action="/register/<%= type %>" method="POST">
			<h1>Register as <%= type %></h1>
			<div class="social-container">
				<a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
				<a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
				<a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
			</div>
			<span>or use your email for registration</span>
            <input type="text" placeholder="Name" name="name">
            <input type="text" placeholder="Username" name="uname">
            <input type="email" placeholder="Email" name="email">
            <% if(type == 'tutor') { %>
                <div class="form-group">
                    <label for="subjects">Subjects*</label>
                    <select class="form-control" id="subjects" name="subjects" multiple required>
                      <option>Physics</option>
                      <option>Chemistry</option>
                      <option>Maths</option>
                    </select>
                </div>
            <% } %>
            <input name="contact" placeholder="Contact No." type="tel" id="contact" pattern="[1-9]{1}[0-9]{9}" required>
            <input name="whatsapp" placeholder="Whatsapp No." type="tel" id="whatsapp" pattern="[1-9]{1}[0-9]{9}">
            <input type="password" placeholder="Password" name="password">
            <div>
                <% if(message) { %>
                    <b><%= message %></b>
                <% } %>
            </div>

			<div class="row">
                <button type="button" onclick="resetForm()">Reset</button>
                <button type="submit" >Register</button>
            </div>

        </form>

    </div>
    
	<div class="form-container sign-in-container">
		<form action="/login/<%= type %>" method="POST" id="myForm">
			<h1>Sign in as <%= type %></h1>
			<div class="social-container">
				<a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
				<a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
				<a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
			</div>
			<span>or use your account</span>
			<input type="text" placeholder="Username" name="uname">
			<input type="password" placeholder="Password" name="password">
			<!-- <a href="#">Forgot your password?</a> -->
			<% if(message) { %>
                <b><%= message %></b>
            <% } %>
            <div class="row">
                <button type="button" onclick="resetForm()">Reset</button>
                <button type="submit" >Login</button>
            </div>
        </form>
        
	</div>
	<div class="overlay-container">
		<div class="overlay">
			<div class="overlay-panel overlay-left">
				<h1>Welcome !</h1>
				<p>To keep connected with us please login with your personal info</p>
				<button class="ghost" id="signIn">Login</button>
                <% if(type != 'student') { %>
                    <a href="/login/student"><button class="ghost">Login as Student</button></a>
                <% } %>
                <% if(type != 'tutor') { %>
                    <a href="/login/tutor"><button class="ghost">Login as Tutor</button></a>
                <% } %>
			</div>
			<div class="overlay-panel overlay-right">
				<h1>Hello, Friend!</h1>
				<p>Enter your personal details and start journey with us</p>
                <button class="ghost" id="signUp">Register</button>
                <% if(type != 'student') { %>
                    <a href="/login/student"><button class="ghost">Login as Student</button></a>
                <% } %>
                <% if(type != 'tutor') { %>
                    <a href="/login/tutor"><button class="ghost">Login as Tutor</button></a>
                <% } %>
			</div>
        </div>
	</div>
</div>

<script>
    function resetForm() {
    document.getElementsByTagName("form").reset();
}

const signUpButton = document.getElementById('signUp');
const signInButton = document.getElementById('signIn');
const container = document.getElementById('container');

signUpButton.addEventListener('click', () => {
	container.classList.add("right-panel-active");
});

signInButton.addEventListener('click', () => {
	container.classList.remove("right-panel-active");
});
</script>

</body>
</html>